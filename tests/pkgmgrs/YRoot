    key='3746C208A7317B0F'
)

AptPackage(
    'gcloud',
    package='google-cloud-sdk',
    deps=':gcloud-repository'
)

DockerImage(
    'another-image',
    start_from=':the-image',
    deps=[':ruby-ng-ppa',':gcloud']
)
