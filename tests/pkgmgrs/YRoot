AptPackage(
    'wget',
    package='wget'
)

AptPackage(
    'curl',
    package='curl',
    deps=':wget'
)

AptPackage(
    'apt-transport-https',
    package='apt-transport-https',
    deps=':curl'
)

CustomInstaller(
    'node',
    uri='https://deb.nodesource.com/setup_4.x',
    script='install-nodejs.sh',
    deps=':apt-transport-https',
    packaging_params={
        'set_env': {
            'FOO': 'BAR',
        }
    }
)

AptRepository(
    'ruby-ng-ppa',
    source='ppa:brightbox/ruby-ng'
)

AptPackage(
    'ruby-run',
    package='ruby2.2',
    deps=[':node', ':ruby-ng-ppa']
)

AptPackage(
    'ruby-dev',
    package='ruby2.2-dev',
    deps=':ruby-ng-ppa'
)

TargetGroup(
    'ruby',
    deps=[':ruby-run', ':ruby-dev'],
    packaging_params={
        'set_env': {
            'TEST': '1',
        },
        'semicolon_join_env': {
            'PATH': '/foo/bar',
        },
    }
)

PythonPackage(
    'flask',
    package='flask',
    version='0.12.2',
    pip='pip',
    deps=':ruby',
    packaging_params={
        'semicolon_join_env': {
            'PATH': '/ham',
        },
    }
)

NpmPackage(
    'leftpad',
    package='left-pad',
    deps=':flask'
)

GemPackage(
    'compass',
    package='compass',
    deps=':leftpad',
    packaging_params={
        'semicolon_join_env': {
            'PATH': '/spam',
        },
    }
)

PythonPackage(
    'gunicorn',
    package='gunicorn',
    deps=':compass',
    pip='pip'
)

ExtDockerImage(
    'python',
    image='python',
    tag='3'
)

DockerImage(
    'the-image',
    start_from=':python',
    docker_cmd='foo',
    build_user='root',
    run_user='root',
    deps=[
        ':gunicorn'
    ]
)

