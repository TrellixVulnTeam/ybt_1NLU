ExtDockerImage(
    'ubuntu',
    image='ubuntu',
    tag='16.04'
)

DockerImage(
    'proto-builder',
    start_from=':ubuntu',
    deps=[
        '//3rdparty:upgrade-pip',
        '//3rdparty:protobuf',
    ]
)

Proto(
    'hello-proto',
    in_buildenv=':proto-builder',
    sources='hello.proto',
    copy_generated_to='//build/gen'
)
