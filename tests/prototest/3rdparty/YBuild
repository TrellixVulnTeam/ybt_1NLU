PythonPackage(
    'flask',
    package='flask',
    deps=':upgrade-pip'
)

AptPackage('pip', package='python-pip')

AptPackage('setuptools', package='python-setuptools')

CustomInstaller(
    'protobuf', # version 2.6.1
    uri='https://github.com/google/protobuf/releases/download/v2.6.1/protobuf-2.6.1.tar.gz',
    script='install-protobuf.sh',
    deps=':build-essentials-pack'
)

CustomInstaller(
    'upgrade-pip',
    uri='',
    script='upgrade-pip.sh',
    deps=[':pip', ':setuptools']
)

TargetGroup(
    'build-essentials-pack',
    deps=[
        ':autoconf',
        ':build-essential',
        ':cmake',
        ':curl',
        ':gettext',
        ':m4',
    ]
)

AptPackage('apt-utils', package='apt-utils')

AptPackage('autoconf', package='autoconf')

AptPackage('build-essential', package='build-essential')

AptPackage('cmake', package='cmake')

AptPackage('curl', package='curl')

AptPackage('gettext', package='gettext')

AptPackage('m4', package='m4')
